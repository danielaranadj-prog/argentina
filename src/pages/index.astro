            </div>
        </section>

    </main>

    <script>
        const initMenu = () => {
            const btn = document.getElementById('menu-toggle');
            const menu = document.getElementById('mobile-menu');
            const icon = btn?.querySelector('i');
            btn?.addEventListener('click', () => {
                menu?.classList.toggle('active');
                if (icon) { icon.classList.toggle('fa-bars'); icon.classList.toggle('fa-times'); }
            });
            document.querySelectorAll('.menu-link').forEach(link => {
                link.addEventListener('click', () => menu?.classList.remove('active'));
            });
        };
        initMenu();
        document.addEventListener('astro:after-swap', initMenu);
    </script>
</Layout>

<style>
    .container { max-width: 1100px; margin: 0 auto; padding: 0 20px; }
    .mb-section { margin-bottom: 80px; }
    .scroll-offset { scroll-margin-top: 100px; }
    .section-header { border-left: 9px solid var(--gold); padding-left: 15px; margin-bottom: 30px; }
    .section-header h2 { font-size: 2rem; font-weight: 800; color: var(--title); }
    
    .grid, .tips-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px; }
    
    /* ESTILO PARA EL ENLACE DE LAS TARJETAS */
    .card-link { display: block; text-decoration: none; transition: transform 0.3s ease; }
    .card-link:hover { transform: translateY(-5px); }

    /* CAMBIO 2: Forzar estilos en los t√≠tulos dentro del componente CARD importado */
    /* Usamos :global porque el h3/h4 est√° dentro de Card.astro, no aqu√≠ */
    .card-link :global(h3), 
    .card-link :global(h4), 
    .card-link :global(.card-title) {
        font-weight: 700 !important; /* Bold */
        font-style: normal !important; /* No Italic */
    }

    .event-container { display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 25px; }
    .event-card { background: var(--card-bg); padding: 25px; border-radius: 24px; border: 1px solid var(--border); }
    .fest-list { list-style: none; padding: 0; }
    .fest-list li { margin-bottom: 12px; display: flex; gap: 10px; font-size: 0.95rem; }
    .holiday-list { display: flex; flex-direction: column; gap: 10px; }
    .holiday-item { display: flex; justify-content: space-between; border-bottom: 1px dashed var(--border); padding-bottom: 5px; font-size: 0.9rem; }
    .faq-item { background: var(--card-bg); border-radius: 16px; border: 1px solid var(--border); padding: 15px 20px; margin-bottom: 10px; }
    .faq-item summary { font-weight: 700; cursor: pointer; display: flex; justify-content: space-between; align-items: center; }
    .faq-item p { padding-top: 15px; margin-top: 15px; border-top: 1px solid var(--border); color: var(--text-secondary); font-size: 0.95rem; }
</style>