                        <li><i class="fas fa-wine-glass"></i> <strong>Vendimia:</strong> Marzo (Mendoza).</li>
                        <li><i class="fas fa-star"></i> <strong>Mundial de Tango:</strong> Agosto (BA).</li>
                    </ul>
                </div>
                <div class="event-card">
                    <h3>Feriados Nacionales</h3>
                    <div class="holiday-list">
                        {feriados.map(f => (
                            <div class="holiday-item">
                                <span class="h-date">{f.fecha}</span>
                                <span class="h-name">{f.nombre}</span>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </section>

        <section id="faq" class="mb-section scroll-offset">
            <div class="section-header">
                <h2>Preguntas Frecuentes</h2>
            </div>
