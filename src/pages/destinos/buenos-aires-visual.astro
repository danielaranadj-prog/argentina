<style>
  /* HERO */
  .dest-hero {
    height: 45vh;
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    padding-top: 60px;
  }
  .overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.5); }
  .hero-text { position: relative; z-index: 2; padding: 0 20px; }
  
  .hero-badge {
    display: inline-block;
    background: var(--gold);
    color: #1a202c;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 1px;
    margin-bottom: 15px;
  }

  .hero-text h1 { 
    font-size: clamp(2.5rem, 6vw, 4rem); 
    margin: 0; 
    font-weight: 800;
    letter-spacing: -1px; 
    text-transform: uppercase;
    text-shadow: 0 2px 10px rgba(0,0,0,0.5);
  }

  .slogan { 
    font-size: 0.9rem;
    font-weight: 400;
    letter-spacing: 1px;
    opacity: 0.9;
    margin-top: 10px;
  }
  
  /* CONTAINER */
  .container { max-width: 900px; margin: 0 auto; padding: 40px 20px; }
  .nav-back { margin-bottom: 30px; }
  .back-link { 
    font-size: 0.75rem; 
    color: var(--gold); 
    letter-spacing: 2px; 
    font-weight: 700; 
    display: flex; 
    align-items: center; 
    gap: 8px; 
    text-decoration: none; 
  }

  .hub-section {
    margin-bottom: 20px;
  }

  /* CURATED TOURS */
  .curated-section {
    margin-top: 40px;
    padding-top: 40px;
    border-top: 1px solid var(--border);
  }

  .section-title {
    font-size: 1.1rem;
    color: var(--title);
    margin: 0 0 10px 0;
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 700;
  }

  .section-title i { color: var(--gold); }

  .section-subtitle {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin: 0 0 25px 0;
  }

  .curated-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
  }

  .curated-card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 25px 20px;
    text-align: center;
    position: relative;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .curated-card:hover {
    transform: translateY(-5px);
    border-color: var(--gold);
  }

  .curated-number {
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 24px;
    height: 24px;
    background: var(--gold);
    color: #1a202c;
    border-radius: 50%;
    font-size: 0.75rem;
    font-weight: 800;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .curated-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, var(--celeste), #93c5fd);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 15px auto;
  }

  .curated-icon i { color: white; font-size: 1.2rem; }

  .curated-card h4 {
    font-size: 1rem;
    color: var(--title);
    margin: 0 0 8px 0;
    font-weight: 700;
  }

  .curated-card p {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .curated-grid { grid-template-columns: 1fr; }
  }
</style>
